<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/layout_list_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listItemHeight"
        android:padding="4dp">

    <CheckBox
            android:id="@+id/task_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/task_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/task_checkbox"
            android:layout_toLeftOf="@id/task_delete_button"/>

    <Button
            android:id="@+id/task_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/delete_button_design"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            style="@style/deleteButton"/>

</RelativeLayout>
