<resources>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/button_design_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="toggleButton" parent="@android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:minHeight">48dip</item>
        <item name="android:minWidth">48dip</item>
    </style>

    <style name="Widget.Button.Delete" parent="android:Widget">
        <item name="android:background">@drawable/button_design_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="deleteButton" parent="@android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Delete</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:minWidth">35dip</item>
    </style>


    <style name="Widget.Button.ClearCompleted" parent="android:Widget">
        <item name="android:background">@drawable/button_design_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="clearCompletedButton" parent="@android:Theme.Black">
        <item name="android:buttonStyleToggle">@style/Widget.Button.ClearCompleted</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:minWidth">35dip</item>
    </style>
</resources>
